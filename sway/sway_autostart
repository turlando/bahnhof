###############################################################################
## DAEMONS                                                                   ##
###############################################################################

exec swayidle                                  \
    timeout 300  swaylock                      \
    timeout 300  'swaymsg "output * dpms off"' \
    resume       'swaymsg "output * dpms on"'  \
    before-sleep swaylock

exec twmnd


###############################################################################
## APPLICATIONS                                                              ##
###############################################################################

workspace www
# layout tabbed
exec firefox
exec thunderbird

workspace im
# layout splith
exec hexchat
exec telegram-desktop
for_window [instance="telegram-desktop"] resize set width 350 px

workspace music
# layout default
exec quodlibet

workspace keys
# layout default
exec keepassxc

workspace www

general {
    colors = true

    color_good     = "#D3DAE3"
    color_degraded = "#D3DAE3"
    color_bad      = "#F27835"
}

order += "ethernet enp0s25"
order += "wireless wlp3s0"
order += "cpu_temperature 0"
order += "battery 0"
order += "tztime local"

tztime local {
    format = " %a %d %h   %H:%M"

    separator_block_width = 10
}

battery 0 {
    path = "/sys/class/power_supply/BAT%d/uevent"

    format = "%status %percentage"

    last_full_capacity       = true
    integer_battery_capacity = true
    hide_seconds             = true

    threshold_type = time
    low_threshold  = 30

    status_chr  = ""
    status_bat  = ""
    status_unk  = ""
    status_full = ""

    separator_block_width = 10
}

cpu_temperature 0 {
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input"

    max_threshold = 95

    format                 = " %degrees °C"
    format_above_threshold = " %degrees °C"

    separator_block_width = 10
}

ethernet enp0s25 {
    format_up   = ""
    format_down = ""

    separator_block_width = 10
}

wireless wlp3s0 {
    format_up   = ""
    format_down = ""

    separator_block_width = 10
}